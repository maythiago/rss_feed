<section class="section">
    <div class="container columns is-multiline">
        <div class="column">
            <div class="container">
                <div class="level">
                    <div class="level-left">
                        <div class="level-item">
                            <h1 class="title">Fontes</h1>
                        </div>
                    </div>
                    <div class="level-right">
                        <div class="level-item">
                            <%= link_to new_source_path , method: :create, class: "button is-primary" do %>
                                <span class="icon">
                                    <i class="fas fa-plus"></i>
                                </span>
                                <span>Adicionar fonte</span>
                                <% end %>
                        </div>
                    </div>
                </div>
                <hr>
            </div>

        <% @sources.each do |source| %>
            <%= render partial: 'source_item' , locals: { source: source } %>
                <% end %>
        </div>
    </div>
</section>
