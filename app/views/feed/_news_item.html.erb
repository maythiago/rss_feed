<div class="column is-half is-offset-one-quarter">
    <div class="box">
        <div class="content">
            <p class="title is-5">
                <%= content.title %>
            </p>
            <p class="subtitle is-7">
                <%= l(content.pub_date, format: :long) if content.pub_date.present? %>
                |
                <%= link_to content.source.name, content.identifier  %>
            </p>
            <p class="content is-6">
                <%= truncate(strip_tags(content.content), length: 360) %>
            </p>
            <% if content.content.present? %>
            <div class="columns is-centered">
                <%= turbo_frame_tag 'modal' %>
                <%= button_to 'Generate Summary' , summary_feed_path(content_id: content.id),
                              method: :post, remote: true, data: { turbo_frame: "modal" },
                              class: 'button' %>
            </div>
            <% end %>
        </div>
    </div>
</div>
