<div class="columns is-centered is-vcentered" style="min-height: 80vh;">
    <div class="column is-one-third">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'box' }) do |f| %>
            <div class="columns is-centered">
                <div class="column is-narrow">
                    <%= image_tag("drawing-icon.svg", class: 'image is-96x96' ) %>
                </div>
            </div>

            <div class="field mb-4">
                <label class="label">
                    <%= f.label :email %>
                </label>
                <div class="control">
                    <%= f.email_field :email, class: 'input' , autofocus: true, autocomplete: "email" , placeholder:
                        true %>
                </div>
            </div>

            <div class="field mb-4">
                <label class="label">
                    <%= f.label :password %>
                </label>
                <div class="control">
                    <%= f.password_field :password, class: 'input' , autocomplete: "current-password" , placeholder:
                        true %>
                </div>
            </div>

            <% if devise_mapping.rememberable? %>
                <div class="field mb-4">
                    <div class="control">
                        <label class="checkbox">
                            <%= f.check_box :remember_me %>
                                <%= f.label :remember_me %>
                        </label>
                    </div>
                </div>
            <% end %>

            <div class='mb-1'>
                <%= link_to "Esqueceu sua senha?" , new_password_path(resource_name) %>
            </div>
            <div class='mb-2'>
                NÃ£o tem uma conta?
                <%= link_to "Registre-se" , new_registration_path(resource_name) %>
            </div>
            <div class="field ">
                <div class="control">
                    <%= f.submit "Login" , class: 'button is-primary' %>
                </div>
            </div>
        <% end %>
    </div>
</div>
