<div class="columns is-centered is-vcentered" style="min-height: 60vh;">
    <div class="column is-one-third">
        <h2 class="title is-2">Log in</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'box' }) do |f| %>
            <div class="field mb-4">
                <label class="label">
                    <%= f.label :email %>
                </label>
                <div class="control">
                    <%= f.email_field :email, class: 'input' , autofocus: true, autocomplete: "email" %>
                </div>
            </div>

            <div class="field mb-4">
                <label class="label">
                    <%= f.label :password %>
                </label>
                <div class="control">
                    <%= f.password_field :password, class: 'input' , autocomplete: "current-password" %>
                </div>
            </div>

            <% if devise_mapping.rememberable? %>
                <div class="field mb-4">
                    <div class="control">
                        <label class="checkbox">
                            <%= f.check_box :remember_me %>
                                <%= f.label :remember_me %>
                        </label>
                    </div>
                </div>
                <% end %>

                    <div class="field">
                        <div class="control">
                            <%= f.submit "Log in" , class: 'button is-primary' %>
                        </div>
                    </div>
                    <% end %>

                        <%= render "devise/shared/links" %>

    </div>
</div>
