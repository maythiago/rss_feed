<div class="columns is-centered is-vcentered" style="min-height: 60vh;">
    <div class="column is-one-third">
        <h2 class="title is-2">Criar sua conta</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'box' }) do |f| %>
            <%= render "devise/shared/error_messages" , resource: resource %>

                <div class="field mb-4">
                    <label class="label">
                        <%= f.label :name %>
                    </label>
                    <div class="control">
                        <%= f.text_field :name, class: "input", autofocus: true, autocomplete: "name", placeholder: true %>
                    </div>
                </div>

                <div class="field mb-4">
                    <label class="label">
                        <%= f.label :email %>
                    </label>
                    <div class="control">
                        <%= f.email_field :email, class: "input" , autocomplete: "email", placeholder: true %>
                    </div>
                </div>

                <div class="field mb-4">
                    <label class="label">
                        <%= f.label :password %>
                    </label>
                    <% if @minimum_password_length %>
                        <em>(<%= @minimum_password_length %> caracteres m√≠nimo)</em>
                        <% end %>
                            <div class="control">
                                <%= f.password_field :password, class: "input" , autocomplete: "new-password", placeholder: true %>
                            </div>
                </div>

                <div class="field mb-4">
                    <label class="label">
                        <%= f.label :password_confirmation %>
                    </label>
                    <div class="control">
                        <%= f.password_field :password_confirmation, class: "input" , autocomplete: "new-password", placeholder: "Confirme a sua senha" %>
                    </div>
                </div>

                <div class="field is-grouped">
                    <div class="control">
                        <%= link_to "Retornar para login" , new_session_path(resource_name), class: "button is-text" %><br>
                    </div>

                    <div class="control">
                        <%= f.submit "Cadastrar" , class: "button is-primary" %>
                    </div>
                </div>
                <% end %>
    </div>
</div>
